<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/pin_huo_red_light" android:width="2dp"></stroke>
            <solid android:color="@color/pin_huo_red_light" />
            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/pin_huo_red" android:width="2dp"></stroke>
            <solid android:color="@color/pin_huo_red" />            <corners android:radius="5dp" />
        </shape></item>
</selector>
