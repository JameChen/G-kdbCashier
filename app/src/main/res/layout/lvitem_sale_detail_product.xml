<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">
    <LinearLayout
        android:id="@+id/layout_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:id="@+id/sale_detail_txt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="10dp"
            android:text=""
            android:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/sale_detail_look"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|right"
            android:lines="1"
            android:paddingTop="10dp"
            android:text="查看"
            android:textColor="@color/kdb_blue"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/img_order_detail_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@android:id/checkbox"
            android:contentDescription="@android:string/ok"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_order_detail_name"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/img_order_detail_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_order_detail_ku"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_detail_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_order_detail_icon"
            android:text=""
            />

        <TextView
            android:id="@+id/txt_order_detail_info"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_detail_ku"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_order_detail_icon"
            android:text=""
          />


        <TextView
            android:id="@+id/txt_order_detail_summary"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_order_detail_ku"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/kdb_blue" />


        <TextView
            android:id="@+id/txt_order_detail_money"
            style="@style/Text.M.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_order_detail_info"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/bg_red" />




    </RelativeLayout>
    <View
        android:id="@+id/line"
        style="@style/line_view"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="12dp" />
</LinearLayout>