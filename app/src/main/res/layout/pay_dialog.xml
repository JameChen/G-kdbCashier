<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y5"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/y5">

        <RadioGroup
            android:id="@+id/rGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_cash_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cb"
                android:button="@null"
                android:drawablePadding="@dimen/y3"
                android:drawableTop="@drawable/pay_01"
                android:gravity="center"
                android:padding="@dimen/x5"
                android:text="现金"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_online_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/bg_cb"
                android:button="@null"
                android:drawablePadding="@dimen/y3"
                android:drawableTop="@drawable/pay_02"
                android:gravity="center"
                android:padding="@dimen/x5"
                android:text="在线支付"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_pos_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/bg_cb"
                android:button="@null"
                android:drawablePadding="@dimen/y3"
                android:drawableTop="@drawable/pay_03"
                android:gravity="center"
                android:padding="@dimen/x5"
                android:text="POS机"
                android:textSize="18sp" />
        </RadioGroup>

        <Button
            android:id="@+id/tv_settle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/btn_login_bg"
            android:text="@string/settle_text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>