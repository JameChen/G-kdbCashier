<resources>
    <style name="popDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="sort_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_list</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 标题栏按钮默认样式 -->
    <style name="button_titlebar_base_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/title_bar_text_color</item>
        <item name="android:textSize">@dimen/fontsize_title_button_middle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 标题栏返回按钮样式 -->
    <style name="button_titlebar_left_style" parent="button_titlebar_base_style">
        <item name="android:drawableLeft">@drawable/back</item>
    </style>
    <!-- 标题栏右边按钮样式 -->
    <style name="button_titlebar_default_style" parent="button_titlebar_base_style"></style>
    <!-- 单个文本框样式 -->
    <style name="edittext_one_style" parent="edittext_base_style">
        <item name="android:background">@drawable/single_bg</item>

    </style>

    <style name="edittext_gray_bg" parent="edittext_base_style">
        <item name="android:background">@drawable/bg_rectangle_solid_gray</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="edittext_one_lower_style" parent="edittext_base_style">
        <item name="android:background">@drawable/single_bg</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 没边框文本框样式 -->
    <style name="edittext_noborder_style" parent="edittext_base_style">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="edittext_upload_item" parent="edittext_noborder_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 字体风格 -->
    <style name="myTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="myTextAppearance.big">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="myTextAppearance.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myTextAppearance.small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTextAppearance.micro">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myTextAppearance.hint">
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="myTextAppearance.hint.medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myTextAppearance.hint.small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTextAppearance.hint.micro">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="body_text_gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_detail_text">
        <item name="android:textColor">@color/item_detail_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
