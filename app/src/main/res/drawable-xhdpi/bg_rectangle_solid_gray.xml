<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/kdb_gray_light" android:width="2dp"></stroke>
            <solid android:color="@color/kdb_gray_light" />
            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/kdb_gray" android:width="2dp"></stroke>
            <solid android:color="@color/kdb_gray" />            <corners android:radius="5dp" />
        </shape></item>
</selector>
